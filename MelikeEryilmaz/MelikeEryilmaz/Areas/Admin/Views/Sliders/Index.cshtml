@model IEnumerable<MelikeEryilmaz.Models.Sliders>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SliderName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SliderName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SliderId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SliderId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SliderId })
        </td>
    </tr>
}

</table>
